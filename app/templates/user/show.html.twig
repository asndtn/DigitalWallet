{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
        </dl>

        <p>
            <ul>
                <li>
                    <a href="{{ url('wallet_index') }}" title="{{ 'action_back_to_wallet_list'|trans}}">{{ 'action_back_to_wallet_list'|trans }}</a>
                </li>
                <li>
                    <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action_edit_account'|trans }}">{{ 'action_edit_account'|trans }}</a>
                </li>
                <li>
                    <a href="{{ url('app_changePassword', {id: user.id}) }}" title="{{ 'action_change_password'|trans }}">{{ 'action_change_password'|trans }}</a>
                </li>
            </ul>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}