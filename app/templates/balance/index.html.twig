{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_balance_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_balance_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'balance.id') }}</th>
                <th>{{ 'label_amount'|trans }}</th>
                <th>{{ 'label_wallet' }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for balance in pagination.items %}
                <tr>
                    <td>{{ balance.id }}</td>
                    <td>{{ balance.balanceAmount }}</td>
                    <td>{{ balance.wallet.type.name }}</td>
                    <td>
                        <a href="{{ url('balance_show', {id: balance.id}) }}" title="{{ 'action_view'|trans }}">{{ 'action_view'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
