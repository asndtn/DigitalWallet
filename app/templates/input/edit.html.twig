{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_input_edit'|trans({'%id%': input.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_input_edit'|trans({'%id%': input.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('input_edit', {id: input.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('input_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}