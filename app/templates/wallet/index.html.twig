{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_wallet_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_wallet_list'|trans }}</h1>
    {% if wallet is defined and wallets|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label_id'|trans }}</th>
                <th>{{ 'label_id_user'|trans }}</th>
                <th>{{ 'label_id_wallet_type'|trans }}</th>
                <th>{{ 'label_id_wallet_currency'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for wallet in wallet %}
                <tr>
                    <td>{{ wallet.id }}</td>
                    <td>{{ wallet.idUser }}</td>
                    <td>{{ wallet.idWallet_Type }}</td>
                    <td>{{ task.idCurrency_Type }}</td>
                    <td>
                        <a href="{{ url('wallet_show', {id: wallet.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}