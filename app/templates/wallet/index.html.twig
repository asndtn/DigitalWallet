{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_record_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_record_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'wallet.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_id_user'|trans, 'wallet.idUser') }}</th>
                <th>{{ 'label_wallet_type'|trans }}</th>
                <th>{{ 'label_currencies'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for wallet in pagination.items %}
                <tr>
                    <td>{{ wallet.id }}</td>
                    <td>{{ wallet.idUser }}</td>
                    <td>{{ wallet.idWalletType.name }}</td>
                    <td>{{ wallet.currency.name }}</td>
                    <td>
                        <a href="{{ url('wallet_show', {id: wallet.id}) }}" title="{{ 'action_view'|trans }}">{{ 'action_view'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        {% else %}
            <p>
                {{ 'message_empty_list'|trans }}
            </p>
        {% endif %}
{% endblock %}